import torch
from torchvision import models, transforms
from PIL import Image

# Load the model
model = models.efficientnet_b0(pretrained=False)
model.classifier[1] = torch.nn.Linear(model.classifier[1].in_features, 4)  # Adjusted for 4 classes
model.load_state_dict(torch.load('cotton_cure_model.pth', map_location=torch.device('cpu')))
model.eval()

# Define transformation for input images
transform = transforms.Compose([
    transforms.Resize((224, 224)),
    transforms.ToTensor(),
])

# Load a sample image and apply transformations
image_path = '/home/archlinux/Documents/Cotton_Cure/static/Test/Healthy leaf /25.jpg'
image = Image.open(image_path)
image = transform(image).unsqueeze(0)  # Add batch dimension

# Run the image through the model
with torch.no_grad():
    outputs = model(image)
    _, predicted_class = torch.max(outputs, 1)

# Print the output
disease_classes = ['Bacterial Blight', 'Healthy', 'Powdery Mildew', 'Target Spot']
predicted_class_name = disease_classes[predicted_class.item()]
print(f"Predicted class: {predicted_class_name}")
